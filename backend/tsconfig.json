{
	"compilerOptions": {
		"module": "NodeNext",
		"target": "ES6",
		"types": ["node"],
		"sourceMap": true,
		"strict": true,
		"allowJs": false,
		"resolveJsonModule": true,
		"allowSyntheticDefaultImports": true,
		"baseUrl": ".",
		"paths": {
			"@apis/*": ["./src/APIS/*"],
			"@controllers/*": ["./src/Server/Controllers/*"],
			"@routes/*": ["./src/Server/Routes/*"],
			"@middleware/*": ["./src/Server/Middleware/*"],
			"@utils/*": ["./src/Server/Utils/*"],
			"@mongo/*": ["./src/MongoDB/*"],
			"@shared/*": ["../shared/*"]
		}
	},
	"exclude": ["node_modules"]
}
